ï»¿@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@model LoginWithRecoveryCodeViewModel
@{
    ViewData["Title"] = Localizer["RecoveryCodeVerification"];
}

<h2>@ViewData["Title"]</h2>
<hr />
<p>
    @Localizer["LoginWithRecoveryCodeDescription"]
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecoveryCode"></label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">@Localizer["LogIn"]</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}