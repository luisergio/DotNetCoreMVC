@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["HomePage"];
}

<br/>

<div class="table">
    <div class="row">
        <div class="col-md-12 center-block">
            <img src="~/images/logo_lg.png" width="150" class="center-block" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h2 class="center-block">@Localizer["Title"]</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Localizer["Description"]
        </div>
    </div>
</div>

<div class="table">
    <div class="row">
        <div class="col-md-8 home-image">
            <img src="~/images/banner1_teamwork.jpg" class="img-responsive" />
        </div>
        <div class="col-md-4">
            <h3 class="panel-title">@Localizer["Banner1Title"]</h3>
            <div class="panel-info">@Localizer["Banner1Description"]</div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-4 ">
            <h3 class="panel-title">@Localizer["Banner2Title"]</h3>
            <div class="panel-info">@Localizer["Banner2Description"]</div>
        </div>
        <div class="col-md-8 home-image">
            <img src="~/images/banner2_financial.jpg" class="img-responsive" />
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-8 home-image">
            <img src="~/images/banner3_computer.jpg" class="img-responsive" />
        </div>
        <div class="col-md-4">
            <h3 class="panel-title">@Localizer["Banner3Title"]</h3>
            <div class="panel-info">@Localizer["Banner3Description"]</div>
        </div>
    </div>
</div>



<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item carousel-item active">
            <img src="~/images/banner1_teamwork.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Estabeleça um controle de suas finanças com o auxílio da nossa plataforma.
                </p>
            </div>
        </div>
        <div class="item carousel-item">
            <img src="~/images/banner2_financial.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Análise gerencial realizada com base em uma plataforma inteligênte.
                </p>
            </div>
        </div>
        <div class="item carousel-item">
            <img src="~/images/banner3_computer.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Evite fraudes e desvios de recursos em sua empresa.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>




<div class="row">
    &nbsp;<br/>
    &nbsp;<br />
    &nbsp;<br />
    &nbsp;<br />
    &nbsp;<br />
    &nbsp;<br />
</div>
